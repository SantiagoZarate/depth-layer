---
import { stepOneCode, stepThreeCode, stepTwoCode, steps } from "../constants";
import CodeSnippet from "./CodeSnippet.astro";
---

<section class="border-b borde-border w-full min-h-screen py-20 flex items-center text-text-active">
  <section class="flex flex-col gap-12 items-center mx-auto border-l border-border justify-center max-w-screen-md">
    {
      steps.map((step, index) => (
        <article class="flex flex-col gap-4 px-6 w-full">
          <header class="relative">
            <span class="absolute -left-9 bg-black rounded-full h-6 w-6 text-center">{index + 1 }</span>
            <h2 class="font-bold text-lg capitalize">{step.title}</h2>  
          </header>
          <p class="text-text-secondary">{step.description}</p>
          <CodeSnippet lang={step.codeLang} code={step.code} filename={step.filename} fileExtension="pnpm"/>
        </article>
      ))
    }
  </section>
</section>